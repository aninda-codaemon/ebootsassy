<div class="col-md-6">
  <div class="form-group">
      <label>Your email address*:</label>
      {{input type="email" class="form-control" placeholder="Your email address" value=emailAddress autofocus="autofocus"}}
  </div>
  <div class="form-group">
      <label>Your message*:</label>
      {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="5" value=message}}
  </div>
  <button class="btn btn-success" disabled={{isDisabled}} {{action 'sendMessage'}}>Send</button>
</div>

{{#if responseMessage}}
  <div class="col-md-6">
      <br/>
      <div class="alert alert-success">
          <h4>Thank you! Your message is sent.</h4>
          <p>{{responseMessage}}</p>
      </div>
  </div>
{{/if}}